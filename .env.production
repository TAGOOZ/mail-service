# Production Environment Configuration
# WARNING: This file contains sensitive information. Keep it secure!

# Database Configuration
MONGODB_ROOT_USERNAME=tempmail_admin
MONGODB_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
MONGODB_DATABASE=tempmail_prod

# Redis Configuration (no auth for internal network)
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION

# Server Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=https://mail.nnu.edu.kg

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_AND_SECURE_SECRET_KEY_IN_PRODUCTION_AT_LEAST_64_CHARACTERS
JWT_EXPIRES_IN=24h

# Mail Configuration
MAIL_DOMAIN=nnu.edu.kg
SMTP_HOST=mailserver
SMTP_PORT=25

# Postfix Configuration (optional relay settings)
POSTFIX_RELAY_HOST=
POSTFIX_RELAY_PORT=587
POSTFIX_RELAY_USERNAME=
POSTFIX_RELAY_PASSWORD=

# Frontend Configuration
REACT_APP_API_URL=https://mail.nnu.edu.kg/api
REACT_APP_WS_URL=https://mail.nnu.edu.kg
REACT_APP_MAIL_DOMAIN=nnu.edu.kg

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION_VERY_LONG_AND_SECURE

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30